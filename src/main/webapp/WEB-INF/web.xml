<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AutoLoginFilter</filter-name>
        <filter-class>com.qfedu.filter.AutoLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutoLoginFilter</filter-name>
        <url-pattern>/login.html</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CheckLoginFilter</filter-name>
        <filter-class>com.qfedu.filter.CheckLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckLoginFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>MiniMVC</servlet-name>
        <servlet-class>com.qfedu.mini.mvc.servlet.DispatchServlet</servlet-class>
        <init-param>
            <param-name>ContextConfigLocation</param-name>
            <param-value>classpath:config.properties</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>MiniMVC</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

<!-- 配置静态资源释放  -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/lib/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/page/*</url-pattern>
    </servlet-mapping>

</web-app>